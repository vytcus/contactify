{
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./build/",
    "sourceMap": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
